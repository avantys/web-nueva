---
import Layout from '../layouts/Layout.astro';
import VPSSoftware from '../components/VPSSoftware.astro';
import VPSHardware from '../components/VPSHardware.astro';
import VPSNetwork from '../components/VPSNetwork.astro';
import VPSServices from '../components/VPSServices.astro';
import VPSDatacenters from '../components/VPSDatacenters.astro';
import VPSUseCases from '../components/VPSUseCases.astro';
import VPSPricing from '../components/VPSPricing.astro';
import VPSFAQ from '../components/VPSFAQ.astro';
---

<Layout>
    <!-- Hero Section -->
    <section class="hero-section" style="background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-blue) 100%); padding: 80px 0; color: white;">
        <div class="container">
            <div style="text-align: center;">
                <h1 style="font-size: 3rem; font-weight: 800; margin-bottom: 24px; color: white;">
                    Servidores VPS Administrados
                </h1>
                <p style="font-size: 1.3rem; margin-bottom: 32px; max-width: 700px; margin-left: auto; margin-right: auto;">
                    Desde <strong>10,90€/mes</strong>. Configuración en 5 minutos, soporte 24/7 en español y todo administrado por nuestro equipo técnico.
                </p>
                <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
                    <a href="#planes" style="padding: 16px 32px; background: var(--color-accent); color: white; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 1.1rem;">Ver Planes VPS</a>
                    <a href="#casos-uso" style="padding: 16px 32px; background: transparent; color: white; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 1.1rem; border: 2px solid white;">Casos de Uso</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Software Section -->
    <VPSSoftware />
    
    <!-- Hardware Section -->
    <VPSHardware />
    
    <!-- Network Section -->
    <VPSNetwork />
    
    <!-- Services Section -->
    <VPSServices />
    
    <!-- Datacenters Section -->
    <VPSDatacenters />
    
    <!-- Use Cases Section -->
    <div id="casos-uso">
        <VPSUseCases />
    </div>
    
    <!-- Pricing Section -->
    <div id="planes">
        <VPSPricing />
    </div>
    
    <!-- FAQ Section -->
    <VPSFAQ />
    
    <!-- CTA Final -->
    <section style="background: var(--color-primary); padding: 60px 0; color: white; text-align: center;">
        <div class="container">
            <h2 style="font-size: 2.2rem; font-weight: 700; margin-bottom: 16px;">¿Listo para empezar con tu VPS?</h2>
            <p style="font-size: 1.1rem; margin-bottom: 32px; opacity: 0.9;">Configuración en 5 minutos, migración gratuita y soporte 24/7 en español</p>
            <a href="#contacto" style="padding: 16px 40px; background: var(--color-accent); color: white; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 1.1rem;">Contactar Ahora</a>
        </div>
    </section>
</Layout>
