<style>
.faq-section {
    padding: 60px 0;
    background: linear-gradient(135deg, var(--color-gray-light) 0%, white 100%);
}

.faq-container {
    max-width: 900px;
    margin: 0 auto;
}

.faq-item {
    background: white;
    border: 1px solid rgba(60, 60, 60, 0.1);
    border-radius: 12px;
    margin-bottom: 16px;
    box-shadow: 0 2px 8px rgba(0, 32, 64, 0.05);
    overflow: hidden;
    transition: all 0.3s ease;
}

.faq-item:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 20px rgba(133, 96, 204, 0.1);
}

.faq-item.active {
    border-color: var(--color-accent);
    box-shadow: 0 4px 20px rgba(133, 96, 204, 0.15);
}

.faq-question {
    padding: 24px;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    transition: all 0.3s ease;
}

.faq-question:hover {
    background: rgba(133, 96, 204, 0.05);
}

.faq-question h3 {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-primary);
    margin: 0;
    padding-right: 40px;
    line-height: 1.4;
    font-family: var(--font-family);
}

.faq-icon {
    position: absolute;
    right: 24px;
    top: 50%;
    transform: translateY(-50%);
    width: 24px;
    height: 24px;
    border: 2px solid var(--color-accent);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    flex-shrink: 0;
}

.faq-icon::before {
    content: "+";
    font-size: 1.2rem;
    font-weight: bold;
    color: var(--color-accent);
    transition: all 0.3s ease;
}

.faq-item.active .faq-icon {
    background: var(--color-accent);
    transform: translateY(-50%) rotate(45deg);
}

.faq-item.active .faq-icon::before {
    color: white;
}

.faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
}

.faq-answer-content {
    padding: 0 24px 24px 24px;
    color: var(--color-secondary);
    line-height: 1.6;
    font-size: 1rem;
    font-family: var(--font-family);
}

.faq-item.active .faq-answer {
    max-height: 500px;
}

.faq-search {
    margin-bottom: 40px;
    text-align: center;
}

.faq-search-input {
    width: 100%;
    max-width: 500px;
    padding: 16px 24px;
    border: 2px solid rgba(60, 60, 60, 0.15);
    border-radius: 50px;
    font-size: 1rem;
    font-family: var(--font-family);
    transition: all 0.3s ease;
    background: white;
}

.faq-search-input:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px rgba(133, 96, 204, 0.1);
