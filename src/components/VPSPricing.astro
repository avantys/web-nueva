// src/components/VPSPricing.astro
---

<section class="pricing-section">
    <div class="section-header">
        <h2 class="section-title">Planes VPS Administrados</h2>
        <p class="section-subtitle">Todos los planes incluyen administración completa, soporte 24/7, backups diarios y tráfico ilimitado sin coste extra</p>
    </div>

    <div class="pricing-grid">
        
        <!-- VPS Basic -->
        <div class="pricing-card">
            <div class="plan-header">
                <h3 class="plan-name">VPS Basic</h3>
                <p class="plan-subtitle">Ideal para proyectos pequeños</p>
                <div class="price-container">
                    <span class="price">10,90</span>
                    <span class="price-period">€/mes</span>
                </div>
                <p class="price-note">(+ impuestos)</p>
            </div>
            
            <ul class="features-list">
                <li>4 vCores dedicados</li>
                <li>8 GB RAM DDR4</li>
                <li>75 GB SSD NVMe</li>
                <li>Tráfico completamente ilimitado</li>
                <li><span class="bandwidth-highlight">400 Mbps</span> de ancho de banda</li>
                <li>Backup automatizado diario</li>
                <li>1 IP dedicada incluida</li>
                <li>Soporte 24/7 en español</li>
            </ul>
            
            <a href="#contratar-basic" class="cta-button cta-secondary">Contratar Basic</a>
        </div>

        <!-- VPS Advanced -->
        <div class="pricing-card">
            <div class="plan-header">
                <h3 class="plan-name">VPS Advanced</h3>
                <p class="plan-subtitle">Perfecto para webs en crecimiento</p>
                <div class="price-container">
                    <span class="price">16,95</span>
                    <span class="price-period">€/mes</span>
                </div>
                <p class="price-note">(+ impuestos)</p>
            </div>
            
            <ul class="features-list">
                <li>6 vCores dedicados</li>
                <li>12 GB RAM DDR4</li>
                <li>100 GB SSD NVMe</li>
                <li>Tráfico completamente ilimitado</li>
                <li><span class="bandwidth-highlight">500 Mbps</span> de ancho de banda</li>
                <li>Backup automatizado diario</li>
                <li>1 IP dedicada incluida</li>
                <li>Soporte prioritario 24/7</li>
            </ul>
            
            <a href="#contratar-advanced" class="cta-button cta-secondary">Contratar Advanced</a>
        </div>

        <!-- VPS Pro - RECOMMENDED -->
        <div class="pricing-card recommended">
            <div class="plan-header">
                <h3 class="plan-name">VPS Pro</h3>
                <p class="plan-subtitle">Máximo rendimiento garantizado</p>
                <div class="price-container">
                    <span class="price">29,90</span>
                    <span class="price-period">€/mes</span>
                </div>
                <p class="price-note">(+ impuestos)</p>
            </div>
            <div class="savings-badge">-12%</div>
            
            <ul class="features-list">
                <li>12 vCores de alta frecuencia</li>
                <li>24 GB RAM DDR4</li>
                <li>150 GB SSD NVMe Enterprise</li>
                <li>Tráfico completamente ilimitado</li>
                <li><span class="bandwidth-highlight">1 Gbps</span> ancho de banda garantizado</li>
                <li>Backup automatizado diario + semanal</li>
                <li>2 IPs dedicadas incluidas</li>
                <li>Soporte VIP 24/7 + teléfono</li>
                <li>Migración gratuita incluida</li>
            </ul>
            
            <a href="#contratar-pro" class="cta-button cta-primary">Contratar Pro</a>
        </div>

        <!-- VPS Elite -->
        <div class="pricing-card">
            <div class="plan-header">
                <h3 class="plan-name">VPS Elite</h3>
                <p class="plan-subtitle">Para aplicaciones críticas</p>
                <div class="price-container">
                    <span class="price">49,90</span>
                    <span class="price-period">€/mes</span>
                </div>
                <p class="price-note">(+ impuestos)</p>
            </div>
            
            <ul class="features-list">
                <li>16 vCores Intel Xeon</li>
                <li>48 GB RAM DDR4 ECC</li>
                <li>300 GB SSD NVMe Enterprise</li>
                <li>Tráfico completamente ilimitado</li>
                <li><span class="bandwidth-highlight">2 Gbps</span> ancho de banda</li>
                <li>Backups múltiples + snapshots</li>
                <li>4 IPs dedicadas incluidas</li>
                <li>Gestor de cuenta dedicado</li>
                <li>SLA 99.95% con compensación</li>
            </ul>
            
            <a href="#contratar-elite" class="cta-button cta-secondary">Contratar Elite</a>
        </div>

        <!-- VPS Ultra -->
        <div class="pricing-card">
            <div class="plan-header">
                <h3 class="plan-name">VPS Ultra</h3>
                <p class="plan-subtitle">Máxima potencia disponible</p>
                <div class="price-container">
                    <span class="price">79,90</span>
                    <span class="price-period">€/mes</span>
                </div>
                <p class="price-note">(+ impuestos)</p>
            </div>
            
            <ul class="features-list">
                <li>24 vCores AMD EPYC</li>
                <li>64 GB RAM DDR4 ECC</li>
                <li>500 GB SSD NVMe Enterprise</li>
                <li>Tráfico completamente ilimitado</li>
                <li><span class="bandwidth-highlight">3 Gbps</span> ancho de banda</li>
                <li>Backups empresariales completos</li>
                <li>8 IPs dedicadas + IPv6</li>
                <li>Soporte empresarial 24/7</li>
                <li>SLA 99.99% garantizado</li>
                <li>Hardware dedicado opcional</li>
            </ul>
            
            <a href="#contratar-ultra" class="cta-button cta-secondary">Contratar Ultra</a>
        </div>

        <!-- VPS Supreme -->
        <div class="pricing-card">
            <div class="plan-header">
                <h3 class="plan-name">VPS Supreme</h3>
                <p class="plan-subtitle">Solución enterprise completa</p>
                <div class="price-container">
                    <span class="price">99,90</span>
                    <span class="price-period">€/mes</span>
                </div>
                <p class="price-note">(+ impuestos)</p>
            </div>
            
            <ul class="features-list">
                <li>32 vCores de última generación</li>
                <li>98 GB RAM DDR5</li>
                <li>1 TB SSD NVMe Enterprise</li>
                <li>Tráfico completamente ilimitado</li>
                <li><span class="bandwidth-highlight">10 Gbps</span> conexión premium</li>
                <li>Backup enterprise + DR</li>
                <li>16 IPs dedicadas + rango IPv6</li>
                <li>Arquitecto de soluciones dedicado</li>
                <li>SLA 99.99% + penalizaciones</li>
                <li>Hardware exclusivo garantizado</li>
            </ul>
            
            <a href="#contratar-supreme" class="cta-button cta-secondary">Consultar Supreme</a>
        </div>

    </div>
</section>

<style>
.pricing-section {
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px 20px;
}

.pricing-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 20px;
    margin-top: 40px;
}

.pricing-card {
    background: white;
    border-radius: 16px;
    padding: 32px 24px;
    box-shadow: 0 4px 20px rgba(0, 32, 64, 0.08);
    transition: all 0.3s ease;
    border: 2px solid transparent;
    position: relative;
    text-align: center;
}

.pricing-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 32, 64, 0.15);
}

.pricing-card.recommended {
    border-color: var(--color-accent);
    transform: scale(1.05);
    box-shadow: 0 8px 40px rgba(133, 96, 204, 0.2);
}

.pricing-card.recommended::before {
    content: "MÁS POPULAR";
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-accent);
    color: white;
    padding: 8px 24px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    font-family: var(--font-family);
}

.plan-header {
    border-bottom: 2px solid #f1f5f9;
    padding-bottom: 24px;
    margin-bottom: 24px;
}

.plan-name {
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 8px;
    font-family: var(--font-family);
}

.plan-subtitle {
    font-size: 0.9rem;
    color: var(--color-gray-medium);
    margin-bottom: 16px;
    font-family: var(--font-family);
}

.price-container {
    margin-bottom: 8px;
}

.price {
    font-size: 3rem;
    font-weight: 800;
    color: var(--color-primary);
    line-height: 1;
    font-family: var(--font-family);
}

.price-period {
    font-size: 1rem;
    color: var(--color-gray-medium);
    font-weight: 500;
    font-family: var(--font-family);
}

.price-note {
    font-size: 0.85rem;
    color: var(--color-gray-medium);
    font-family: var(--font-family);
}

.features-list {
    list-style: none;
    margin: 0 0 32px 0;
    padding: 0;
    text-align: left;
}

.features-list li {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
    font-size: 0.95rem;
    color: var(--color-secondary);
    line-height: 1.4;
    font-family: var(--font-family);
}

.features-list li::before {
    content: "✓";
    color: var(--color-accent);
    font-weight: bold;
    margin-right: 12px;
    font-size: 1.1rem;
    flex-shrink: 0;
}

.cta-button {
    width: 100%;
    padding: 16px 24px;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    font-family: var(--font-family);
}

.cta-primary {
    background: var(--color-accent);
    color: white;
}

.cta-primary:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-2px);
    text-decoration: none;
}

.cta-secondary {
    background: transparent;
    color: var(--color-accent);
    border: 2px solid var(--color-accent);
}

.cta-secondary:hover {
    background: var(--color-accent);
    color: white;
    text-decoration: none;
}

.savings-badge {
    position: absolute;
    top: 16px;
    right: 16px;
    background: #22c55e;
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 700;
    font-family: var(--font-family);
}

.bandwidth-highlight {
    color: var(--color-accent);
    font-weight: 700;
}

@media (max-width: 1200px) {
    .pricing-grid {
        gap: 16px;
    }
    
    .pricing-card {
        padding: 28px 20px;
    }
    
    .plan-name {
        font-size: 1.2rem;
    }
    
    .price {
        font-size: 2.5rem;
    }
}

@media (max-width: 768px) {
    .pricing-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 16px;
    }
    
    .pricing-card.recommended {
        transform: none;
    }
    
    .pricing-card {
        padding: 20px 16px;
    }
    
    .price {
        font-size: 2.2rem;
    }
    
    .features-list li {
        font-size: 0.85rem;
        margin-bottom: 8px;
    }
    
    .pricing-section {
        padding: 40px 20px;
    }
}

@media (max-width: 480px) {
    .pricing-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
    }
    
    .pricing-card {
        padding: 16px 12px;
    }
    
    .plan-name {
        font-size: 1rem;
    }
    
    .price {
        font-size: 1.8rem;
    }
    
    .features-list li {
        font-size: 0.8rem;
        margin-bottom: 6px;
    }
    
    .cta-button {
        padding: 12px 16px;
        font-size: 0.9rem;
    }
}
</style>
